<h1>Edit <%= @company.name %>'s Information</h1>

<h3>This is what we currently have on file:</h3>
<ul>
  <li><%= @company.location %></li>
  <li><%= @company.industry %></li>
  <li><%= @company.description %></li>
</ul>


<%= form_for @company, method: :patch do |f| %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :industry %>
    <%= f.text_field :industry %>
  </div>

    <%= f.submit %>
<% end %>
