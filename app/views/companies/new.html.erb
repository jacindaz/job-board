<h1>Add a Company</h1>

<%= form_for @company do |f| %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :industry %>
    <%= f.text_field :industry %>
  </div>

    <%= f.submit %>
<% end %>
